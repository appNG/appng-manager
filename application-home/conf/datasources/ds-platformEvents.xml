<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.appng.org/schema/platform" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.appng.org/schema/platform http://www.appng.org/schema/platform/appng-platform.xsd">

	<datasource id="platformEvents">
		<config>
			<title>events</title>
			<!--permissions> <permission ref="platformEvent.list" mode="set" /> </permissions -->
			<params />
			<meta-data bindClass="org.appng.core.domain.PlatformEvent">
				<field name="created" type="date" format="yyyy-MM-dd HH:mm:ss,SS">
					<sort order="desc" prio="0" />
					<label id="created" />
				</field>
				<field name="type" type="text">
					<label id="type" />
				</field>
				<field name="event" type="longtext" displayLength="120">
					<label id="event" />
				</field>
				<field name="user" type="text">
					<label id="user" />
				</field>
				<field name="host" type="text">
					<label id="host" />
				</field>
				<field name="hostName" type="text">
					<label id="hostName" />
				</field>
				<field name="servletPath" type="text">
					<label id="servletPath" />
				</field>
			</meta-data>
		</config>
		<bean id="platformEvents">
		</bean>
	</datasource>

	<datasource id="eventFilter">
		<config>
			<title />
			<meta-data bindClass="org.appng.application.manager.business.PlatformEvents.EventFilter">
				<field name="fTps" type="list:checkbox" />
				<field name="fTxt" type="text" />
				<field name="fUsr" type="text" />
				<field name="fHst" type="text" />
				<field name="fHstNm" type="text" />
				<field name="fBf" type="date" />
				<field name="fAf" type="date" />
			</meta-data>
		</config>
		<bean id="eventFilter" />
	</datasource>

</datasources>