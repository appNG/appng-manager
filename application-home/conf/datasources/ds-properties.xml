					<icon>delete</icon>
					<confirmation id="property.delete.confirm" params="#{shortName}" />
					<permissions>
					</permissions>
				</link>
			</linkpanel>
		</config>
		<bean id="properties">
			<option name="properties" nodeId="${nodeid}" />
		</bean>
	</datasource>

