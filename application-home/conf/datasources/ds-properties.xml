			<linkpanel id="other" location="both">
				<link mode="intern" target="/system/node/update/${nodeId}/property/create">
					<label>property.create</label>
					<icon>new</icon>
					<permissions>
					</permissions>
				</link>
			</linkpanel>
			<linkpanel id="actions" location="inline">
				<link mode="intern" target="/system/node/update/${nodeId}/property/update/${propertyId}" default="true">
					<label>edit</label>
					<icon>edit</icon>
					<permissions>
					</permissions>
				</link>
				<link mode="intern" target="/system/node/update/${nodeId}/property/delete-node-property/${propertyId}">
